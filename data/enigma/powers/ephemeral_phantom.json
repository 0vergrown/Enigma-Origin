{
    "name":"Ephemeral Phantom",
    "description":"Embrace the shadows, becoming intangible and nearly invisible. Phase through the very matter of the world, leaving no trace but a chilling breeze.",
    "badges": [
        {
            "type":"origins:tooltip",
            "sprite":"origins:textures/gui/badge/toggle.png",
            "text":[
              "Toggleable with [",
              {
                "keybind":"key.loadToolbarActivator"
              },
              "] key."
            ]
        }
    ],
    "type":"origins:multiple",
    "toggle":{
       "type":"origins:toggle",
       "active_by_default":false,
       "key":{
          "key":"key.loadToolbarActivator"
       },
       "retain_state":false
    },
    "sound_effects":{
       "type":"origins:active_self",
       "entity_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:play_sound",
                "sound":"minecraft:particle.soul_escape",
                "volume":1.00,
                "pitch":1.00
             },
             {
                "type":"origins:apply_effect",
                "effect":{
                   "effect":"minecraft:blindness",
                   "duration":40,
                   "amplifier":0,
                   "is_ambient":true,
                   "show_particles":false,
                   "show_icon":false
                }
             }
          ]
       },
       "cooldown":20,
       "hud_render":{
          "should_render":false
       },
       "key":{
          "key":"key.loadToolbarActivator",
          "continuous":false
       }
    },
    "particle_effects":{
       "type":"origins:action_over_time",
       "entity_action":{
          "type":"origins:if_else",
          "condition":{
             "type":"origins:swimming"
          },
          "if_action":{
             "type":"origins:spawn_particles",
             "particle":{
                "type":"minecraft:dust_color_transition",
                "params":"0 0 0 1 0 0 0"
             },
             "speed":0,
             "count":5,
             "force":true,
             "spread":{
                "x":0.1,
                "y":0.1,
                "z":0.1
             },
             "offset_y":0.25
          },
          "else_action":{
            "type": "origins:execute_command",
            "command": "particle dust_color_transition 0 0 0 1 0 0 0 ~ ~1 ~ 0.25 0.5 0.25 0 5 force @a"
          }
       },
       "interval":1,
       "condition":{
          "type":"origins:power_active",
          "power":"enigma:ephemeral_phantom_toggle",
          "inverted":false
       }
    },
    "flying":{
       "type":"origins:swimming",
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:power_active",
                "power":"enigma:ephemeral_phantom_toggle",
                "inverted":false
             },
             {
                "type":"origins:fluid_height",
                "fluid":"minecraft:water",
                "comparison":"==",
                "compare_to":0
             }
          ]
       }
    },
    "invisibility":{
       "type":"origins:invisibility",
       "render_armor":false,
       "render_outline":true,
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:power_active",
                "power":"enigma:ephemeral_phantom_toggle",
                "inverted":false
             },
             {
                "type":"origins:swimming"
             }
          ]
       }
    },
    "phasing":{
       "type":"origins:phasing",
       "blacklist":true,
       "block_condition":{
          "type":"origins:in_tag",
          "tag":"origins:unphasable"
       },
       "render_type":"none",
       "view_distance":10,
       "phase_down_condition":{
          "type":"origins:or",
          "conditions":[
             {
                "type":"origins:and",
                "conditions":[
                   {
                      "type":"origins:sneaking"
                   },
                   {
                      "type":"origins:on_block"
                   }
                ]
             },
             {
                "type":"origins:and",
                "conditions":[
                   {
                      "type":"origins:swimming"
                   },
                   {
                      "type":"origins:fluid_height",
                      "fluid":"minecraft:water",
                      "comparison":"==",
                      "compare_to":0
                   }
                ]
             }
          ]
       },
       "condition":{
          "type":"origins:power_active",
          "power":"enigma:ephemeral_phantom_toggle",
          "inverted":false
       }
    }
}